<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonCheckInTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorLightPurple</item>

    </style>

    <style name="ButtonCheckOutTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorGreen</item>

    </style>

    <style name="ButtonInUseTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorRed</item>

    </style>

    <style name="ButtonQueueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorBlue</item>

    </style>

</resources>