<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addChargePoint.AddChargePoint2Activity">

    <LinearLayout
        android:id='@+id/layoutToolBar'
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chargePointInfoTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Charge Point Registration"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="Address Info"
        android:textColor="@color/colorPrimaryText"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutToolBar" />

    <EditText
        android:id="@+id/registerTitle"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

    <EditText
        android:id="@+id/registerAddress"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Charge Point Address"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerTitle" />

    <EditText
        android:id="@+id/registerPostCode"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Post Code"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerAddress" />

    <EditText
        android:id="@+id/registerStateOrProvince"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="State Or Province"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerPostCode" />

    <EditText
        android:id="@+id/registerTown"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Town"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerStateOrProvince" />

    <Button
        android:id="@+id/adjustLocationBtn"
        android:layout_width="146dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:text="Adjust location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerTown" />

    <Button
        android:id="@+id/registerChargePointNextBtn1"
        android:layout_width="146dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adjustLocationBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>