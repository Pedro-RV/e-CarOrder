<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageConnector"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/connectorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connectorType"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imageConnector"
            android:layout_toEndOf="@+id/imageConnector"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/connectorPowerKW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connectorPowerKW"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_toRightOf="@+id/imageConnector"
            android:layout_toEndOf="@+id/imageConnector"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/connectorType" />

        <Button
            android:id="@+id/checkInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-in"
            android:theme="@style/ButtonCheckInTheme"
            android:layout_toRightOf="@+id/connectorType"
            android:layout_toEndOf="@+id/connectorType"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/checkOutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-out"
            android:theme="@style/ButtonCheckOutTheme"
            android:layout_toRightOf="@+id/connectorType"
            android:layout_toEndOf="@+id/connectorType"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/inUseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In use"
            android:theme="@style/ButtonInUseTheme"
            android:layout_toRightOf="@+id/connectorType"
            android:layout_toEndOf="@+id/connectorType"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>